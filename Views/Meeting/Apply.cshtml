@{
    ViewBag.Title = "Ishtirak Formu";
}

<h1 class="h4 text-center">Iclasda ishtirak formu</h1>
<form method="post">
    <div class="mb-3">
        <label for="Name" class="foorm-label">Ad Soyad</label>
        <input type="text" name="Name" id="Name" class="form-control">
    </div>

    <div class="mb-3">
        <label for="Phone" class="foorm-label">Telefon</label>
        <input type="text" name="Phone" id="Phone" class="form-control">
    </div>

    <div class="mb-3">
        <label for="Email" class="foorm-label">Email</label>
        <input type="email" name="Email" id="Email" class="form-control">
    </div>

    <div class="mb-3">
        <label for="WillAttend" class="foorm-label">Ishtirak edecekmisiniz?</label>
        <select name="WillAttend" id="WillAttend" class="form-select">
            <option value="true">Beli, Gelecem</option>
            <option value="false">Xeyr, Gelmeyecem</option>
        </select>
    </div>
    
    <button class="btn btn-primary"  type="submit">Qeyd et</button>
</form>
