@model  List<UserInfo>

@{
    ViewBag.Title = "Iclasda ishtirak edecekler:";
}

<main class="text-center">
<h1 class="h4">Iclasda ishtirak edecekler:</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Ad</td>
            <td>Ishtirak veziyyeti</td>
            <td></td>
        </tr>
    </thead>
    <tbody>

        <!-- For User Count -->
        @{int i = 0;}

        @foreach(var user in Model)
        {
            var durum = @user.WillAttend ? "Beli" : "Xeyr";
            var className = @user.WillAttend ? "table-success" : "table-danger";

            if(user.WillAttend == true)
            {
                i++;
            }

        <tr class="@className">
            <td>@user.Name</td>
            <td>@durum</td>
            <td>
                <a class="btn btn-sm btn-success" href="/meeting/details/@user.Id">Daha Etrafli</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<div class="card">
    <div class="card-body">
        <span>Ishtirakci sayi: @i</span>
    </div>
</div>
</main>